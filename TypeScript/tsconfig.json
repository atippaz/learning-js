{
    "compilerOptions": {
        "lib": [
            "es6"
        ],
        "target": "es6",
        "module": "CommonJS",
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "emitDecoratorMetadata": true,
        "esModuleInterop": true,
        "experimentalDecorators": true,
        "sourceMap": true
    },
    "exclude": [
        "node_modules",

        "**/*.json"
    ]
}